<div class="post-item">
    <a href="<%- config.root %><%- post.path %>">
        <h1 class="post-title">
            <%- post.title || "Untitled" %>
        </h1>
    </a>
    <h2 class="post-description">
        <%- truncate(strip_html(post.description), { length: 120 }) || "" %>
    </h2>
    <p class="post-date">
        <%= post.date.format(config.date_format) %>
    </p>
</div>