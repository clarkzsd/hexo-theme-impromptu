<div class="post-item">
    <h1 class="post-title">
        <%- post.title || "Untitled" %>
    </h1>
    <h2 class="post-description">
        <%- truncate(strip_html(post.description), { length: 120 }) || "" %>
    </h2>
    <p class="post-meta">
        <%= post.date.format(config.date_format) %>
    </p>
</div>