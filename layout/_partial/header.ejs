<header class="blog-header">
    <a href="/" class="blog-logo">
        <%= config.title %>
    </a>
    <button class="header-bar-btn">
        <i class="fa fa-bars" aria-hidden="true"></i>
    </button>
    <nav class="header-nav nav-links">
        <% for (var i in theme.menu){ %>
            <a class="header-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
    </nav>
</header>

<script>
    var classNameList;
    var headerBarBtn = document.getElementsByClassName('header-bar-btn')[0];
    var headerNav = document.getElementsByClassName('header-nav')[0];
    headerBarBtn.addEventListener('click', () => {
        classNameList = headerNav.className.split(' ');
        console.log(classNameList.length);
        if(classNameList.length === 2) {
            headerNav.className += ' nav-expand';
        } else {
            headerNav.className = 'header-nav nav-links';
        }
    }, false);
</script>