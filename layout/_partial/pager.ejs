<div class="pager-wrapper outer">
    <ul class="pager">
        <% if (page.prev){ %>
            <li class="previous">
                <a href="<%- config.root %><%- page.prev_link %>">&larr; Newer Posts</a>
            </li>
        <% } %>
        <% if (page.next){ %>
            <li class="next">
                <a href="<%- config.root %><%- page.next_link %>">Older Posts &rarr;</a>
            </li>
        <% } %>
    </ul>
</div>